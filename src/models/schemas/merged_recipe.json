{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["dish_name", "ingredients_with_amounts", "instructions"],
    "properties": {
        "dish_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500,
            "description": "Название блюда"
        },
        "description": {
            "type": "string",
            "maxLength": 10000,
            "description": "Описание рецепта"
        },
        "ingredients_with_amounts": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Название ингредиента"
                    },
                    "amount": {
                        "oneOf": [
                            {"type": "number"},
                            {"type": "string"}
                        ],
                        "description": "Количество (число или строка типа '1/2')"
                    },
                    "unit": {
                        "type": "string",
                        "description": "Единица измерения (g, ml, cup, tablespoon, etc.)"
                    }
                },
                "additionalProperties": false
            },
            "description": "Список ингредиентов с количеством"
        },
        "instructions": {
            "type": "string",
            "minLength": 10,
            "description": "Пошаговые инструкции приготовления"
        },
        "cook_time": {
            "oneOf": [
                {"type": "string", "pattern": "^\\d+\\s*(minutes?|hours?)?(\\s*\\d+\\s*minutes?)?$"},
                {"type": "null"}
            ],
            "description": "Время готовки (например: '30 minutes', '1 hour 15 minutes') или null"
        },
        "prep_time": {
            "oneOf": [
                {"type": "string", "pattern": "^\\d+\\s*(minutes?|hours?)?(\\s*\\d+\\s*minutes?)?$"},
                {"type": "null"}
            ],
            "description": "Время подготовки (например: '15 minutes') или null"
        },
        "source_notes": {
            "type": "string",
            "maxLength": 2000,
            "description": "Заметки о том, какие рецепты что добавили (на английском, для логирования)"
        }
    },
    "additionalProperties": false
}